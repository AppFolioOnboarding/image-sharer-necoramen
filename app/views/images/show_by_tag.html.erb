<h1>Images with tag #<%= @tag %></h1>

<% @images.reverse_each do |image| %>
  <a href="<%= image_path(image) %>">
    <img src="<%= image.url %>" width="400">
  </a>
  <% image.tags.each do |tag| %>
    <a href="/tag/<%= tag %>">#<%= tag %></a>
  <% end %>
  <br>
<% end %>

<a href="<%= root_path %>">&lt;Home</a>
